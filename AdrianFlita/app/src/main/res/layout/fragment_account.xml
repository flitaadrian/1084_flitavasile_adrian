<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AccountFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="10dp"
           android:text="Date Personale"
           android:textColor="#ccc"
           android:textSize="18dp"
           android:textStyle="bold" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="20dp"
           android:text="Nume"
           android:textColor="@color/black"
           android:textSize="18dp"
           android:textStyle="normal" />

       <EditText
           android:id="@+id/et_name2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Nume"
           android:layout_marginTop="10dp"
           android:layout_marginStart="16dp"
           android:layout_marginEnd="20dp"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="20dp"
           android:text="Preume"
           android:textColor="@color/black"
           android:textSize="18dp"
           android:textStyle="normal" />

       <EditText
           android:id="@+id/et_surname2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Prenume"
           android:layout_marginTop="10dp"
           android:layout_marginStart="16dp"
           android:layout_marginEnd="20dp"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="20dp"
           android:text="BirthDate"
           android:textColor="@color/black"
           android:textSize="18dp"
           android:textStyle="normal" />

       <EditText
           android:id="@+id/et_birthday_date2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:clickable="false"
           android:layout_marginStart="16dp"
           android:layout_marginEnd="20dp"
           android:cursorVisible="false"
           android:focusable="false"
           android:focusableInTouchMode="false"
           android:hint="Birthdate"/>


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="20dp"
           android:text="Date Cont"
           android:textColor="#ccc"
           android:textSize="18dp"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/tv_iban"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="10dp"
           android:drawableLeft="@drawable/ic_baseline_assured_workload_24"
           android:text=" IBAN: "
           android:textColor="@color/black"
           android:textSize="18dp"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/tV_data_Expirare"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="10dp"
           android:drawableLeft="@drawable/ic_baseline_assured_workload_24"
           android:text=" Data Expirare: "
           android:textColor="@color/black"
           android:textSize="18dp"
           android:textStyle="bold" />


       <Button
           android:id="@+id/bt_actualizare"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Actualizare date"
           android:backgroundTint="@color/black"
           android:layout_margin="20dp"
           android:drawableRight="@drawable/ic_baseline_update_24"/>

   </LinearLayout>

</FrameLayout>